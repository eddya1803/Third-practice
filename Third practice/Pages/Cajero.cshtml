@page
@model Third_practice.Pages.CajeroModel
@{
}

<div class="row d-flex justify-content-center">
    <div class="container col-6 mt-2">
        <form method="get">
            <label>Seleccione el Banco del cual desea hacer el retiro:</label>
            <select name="banco" class="form-control">
                <option value="Banco ABC">Banco ABC</option>
                <option value="Banreservas">Banreservas</option>
                <option value="Banreservas">Banco BHD</option>
                <option value="Banreservas">Banco Popular</option>
                <option value="Banreservas">Banco Ademi</option>
            </select>
            <input type="text" placeholder="Ingrese el monto que desea retirar del cajero" class="form-control my-3" name="montoSolicitado" />
            <input type="submit" value="Retirar" class="btn btn-info"/>
        </form>
    </div>
</div>

<div class="row d-flex justify-content-center mt-5">
    <div class="container  col-6">

        @if (@Model.banco != "")
        {
            <P>Nombre del banco: @Model.banco</P>

            <div class="alert alert-success" role="alert">
                <p>@Model.mensaje</p>
            </div>
        }

        <P class="mt-3">Monto disponible en el cajero: @Model.montoDisponible</P>
        <p>Cantidad de billetes de 1000 disponibles en el cajero: @Model.cantidadBilletesDeMil</p>
        <p>Cantidad de billetes de 500 disponibles en el cajero: @Model.cantidadBilletesDeQuinientos</p>
        <p>Cantidad de billetes de 100 disponibles en el cajero: @Model.cantidadBilletesDeCien</p>
    </div>
</div>
